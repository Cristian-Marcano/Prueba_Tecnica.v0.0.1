{{#if error }}
    <div class="container p-4">
        <div class="row">
            <div class="col-md-6 mx-auto">
                <div class="alert alert-danger alert-dismissible fade show" >
                    {{error}}
                    <button class="btn-close" data-bs-dismiss="alert" aria-label="close">
                        <span aria-hidden="true"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
{{/if}}